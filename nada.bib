014 American Chemical Society.},
    doi = "10.1021/ci5000533",
    file = {:home/diego/MendeleyDesktop/G{\"{u}}ner, Bowen/2014/G{\"{u}}ner, Bowen - 2014 - Setting the record straight The origin of the pharmacophore concept.pdf:pdf},
    issn = "15205142",
    journal = "J. Chem. Inf. Model.",
    keywords = "pharmacophores",
    mendeley-tags = "pharmacophores",
    number = "5",
    pages = "1269--1283",
    pmid = "24745881",
    title = "{Setting the record straight: The origin of the pharmacophore concept}",
    volume = "54",
    year = "2014"
}

