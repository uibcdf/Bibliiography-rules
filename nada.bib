    keywords = "kinetic,networks,transition",
    number = "2",
    pages = "154--162",
    pmid = "18378442",
    title = "{Transition networks for modeling the kinetics of conformational change in macromolecules}",
    volume = "18",
    year = "2008"
}

@article{Amaro2010Emerging_ng19,
